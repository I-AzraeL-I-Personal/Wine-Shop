{% extends 'base.html.twig' %}

{% block title %}Strona główna{% endblock %}

{% block carousel %}
    <div class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" style="max-height: 600px !important;">
            <div class="carousel-item active">
                <a href="{{ path('product') }}">
                    <img src="{{ asset('images/' ~ 'car1.jpg') }}" width="100%" alt="">
                </a>
            </div>
            <div class="carousel-item">
                <a href="{{ path('product') }}">
                    <img src="{{ asset('images/' ~ 'car2.jpg') }}" width="100%" alt="">
                </a>
            </div>
        </div>
    </div>
    <div class="row mt-5"></div>
{% endblock %}

{% block body %}
    <div class="row mt-5"></div>
    <h1 class="text-center display-5">Polecane</h1>
    <hr class="my-3">
    <div class="row mb-5"></div>
    <div class="row">
        {% for product in products %}
                <div class="col d-flex align-items-stretch">
                    <div class="card">
                        <img src="{{ asset('images/' ~ product.link) }}" class="card-img-top" alt="">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text mt-auto">{{ product.price | format_currency("PLN", locale='pl') }}</p>
                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                <a href="{{ path('cart add', {'id': product.id}) }}" class="btn btn-primary mt-auto">
                                    Do koszyka
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
        {% endfor %}
    </div>

    <div class="container">
        <div class="row mt-5"></div>
        <div class="row mt-5"></div>
        <h1 class="text-center display-5">Odkryj naszą ofertę</h1>
        <hr class="my-3">
        <div class="row mb-5"></div>
        <div class="col">
            <a href="{{ path('product') }}">
                <img src="{{ asset('images/' ~ 'discover.jpg') }}" width="100%" alt="">
                <div class="carousel-caption">
                    <h1 class="text-right text-black-50 mb-5">Przejdź do sklepu</h1>
                    <div class="row mb-5"></div>
                </div>
            </a>
        </div>
    </div>

    <div class="container">
        <div class="row mt-5"></div>
        <div class="row mt-5"></div>
        <h1 class="text-center display-5">Skontaktuj się z nami</h1>
        <hr class="my-3">
        <div class="row mb-5"></div>
        <div class="card flex-row">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Godziny otwarcia</h5>
                <p class="card-text">
                    Pon - Pt: 10:00 - 18:00<br/>
                    Sob - Nd: nieczynne
                </p>
            </div>
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Adres</h5>
                <p class="card-text">
                    ul. Piotrkowska 16<br/>
                    90-004 Łódź
                </p>
            </div>
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">Zadzwoń</h5>
                <p class="card-text">+48 12 345 67 89</p>
            </div>
        </div>
        <div class="row mt-5"></div>
    </div>


{% endblock %}
